<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="14.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003" DefaultTargets="Build">
  <Import Project="$([MSBuild]::GetDirectoryNameOfFileAbove($(MSBuildThisFileDirectory), dir.props))\dir.props" />
  <PropertyGroup>
    <BinPlaceRef>true</BinPlaceRef>
    <NuGetDeploySourceItem>Reference</NuGetDeploySourceItem>
    <NugetRuntimeIdentifier>None</NugetRuntimeIdentifier>
    <CoreFxPrivatePackageName>NETCoreApp</CoreFxPrivatePackageName>
    <CoreFxPrivatePackageName Condition="'$(TargetGroup)' == 'uap'">UAP</CoreFxPrivatePackageName>
    <CoreFxPrivatePackageName Condition="'$(TargetGroup)' == 'uapaot'">UAP</CoreFxPrivatePackageName>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Private.CoreFx.$(CoreFxPrivatePackageName)">
      <Version>$(MicrosoftPrivateCoreFxNETCoreAppPackageVersion)</Version>
    </PackageReference>
  </ItemGroup>

  <ItemGroup Condition="'$(TargetsWindows)'=='true'">
    <PackageReference Include="System.Security.Principal.Windows">
      <Version>4.5.0-preview2-25319-04</Version>
    </PackageReference>
    <PackageReference Include="System.Net.Http.WinHttpHandler">
      <Version>4.5.0-preview2-25319-04</Version>
    </PackageReference>
    <PackageReference Include="System.Security.AccessControl">
      <Version>4.5.0-preview2-25319-04</Version>
    </PackageReference>
  </ItemGroup>

  <ItemGroup>
    <!-- for all configurations this project provides refs for that configuration -->
    <BinPlaceConfiguration Include="$(Configuration)">
      <RefPath>$(RefPath)</RefPath>
    </BinPlaceConfiguration>
  </ItemGroup>

  <Target Name="RestoreCoreFX"
          AfterTargets="RestorePackages">
    <Message Text="111 $(OSGroup) $(TargetGroup) $(TargetsWindows) @(PackageReference)" Importance="High" />
  </Target>

  <Target Name="RestoreCoreFX2"
          AfterTargets="Restore">
    <Message Text="222 $(OSGroup) $(TargetGroup) $(TargetsWindows) @(PackageReference)" Importance="High" />
  </Target>

  <Import Project="$([MSBuild]::GetDirectoryNameOfFileAbove($(MSBuildThisFileDirectory), dir.targets))\dir.targets" />
</Project>
